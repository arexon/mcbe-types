{
  "workspace": [
    "edres"
  ],
  "tasks": {
    "test": "deno test --allow-all --parallel --doc",
    "test:update": "deno run test -- --update",
    "ok": "deno task test && deno fmt --check && deno lint && deno check"
  },
  "lint": {
    "plugins": ["./_tools/lint.ts"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/text": "jsr:@std/text@^1.0.16"
  }
}
